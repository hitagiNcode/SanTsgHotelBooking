@model SanTsgHotelBooking.Application.Models.GetReservationDetail.Response.Body
@{
    @if (Model != null)
    {
        ViewData["Title"] = "Booking is succesfull ";
    }
    else
    {
        ViewData["Title"] = "Booking not completed ";

    }
}

<div class="container pt-2">
    @if (Model != null)
    {
        <div class="col-12 text-center">
        <h1 class="text-primary text-center">Booking Placed Successfully!</h1>
        Your Reservattion Number is : @Model.reservationNumber <br /><br />
        <img src="~/images/success-booking.jpg" width="65%" />
    </div>
    <div class="col-12 text-center" style="color:maroon">
        <br />
        Reservation has been placed successfully! <br />
        
    </div>
    }
</div>
