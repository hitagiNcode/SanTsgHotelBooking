<form method="post" asp-action="SoftDelete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Delete User</h2>
            <hr />
        </div>sds
        @*<div asp-validation-summary="All"></div>*@
