@model IEnumerable<SanTsgHotelBooking.Domain.DumUser>
@{
    ViewData["Title"] = "Anasayfa";
}

<div class="container p-1">
    <h4 class="text-warning">Search For Hotels</h4>
    <form class="row g-3" asp-controller="Search" asp-action="Index" method="get">
        <div class="col-8">
            <input type="text" name="SearchString" class="form-control" id="searchBox" placeholder="Search here...">
        </div>
        <div class="col-auto">
            <input class="btn btn-primary mb-3" type="submit" value="Search" />
        </div>
    </form>

    <div class="row pt-1">
        <div class="col-6">
            <h4 class="text-info">Kullanıcı Listesi</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Home" asp-action="Create" class="btn btn-success">
                Kullanıcı Ekle
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped mt-3" style="width:100%">
        <thead>
            <tr>
                <th>
                    Username
                </th>
                <th>
                    Password
                </th>
                <th>
                    Email
                </th>
                <th>
                    Register Date
                </th>
                <th>
                    Active
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.UserName
                    </td>
                    <td width="20%">
                        @obj.Password
                    </td>
                    <td width="20%">
                        @obj.Email
                    </td>
                    <td width="20%">
                        @obj.RegisterDate
                    </td>
                    <td width="5%" class="text-center">
                        @if (obj.isUserActive == true)
                        {
                            <input type="checkbox" checked disabled />
                        }
                        else
                        {
                            <input type="checkbox" disabled />

                        }
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
